<div class="page-header"></div>

<div class="body" >
  <div class="container">
    <p id="notice"></p>
    <div class="row">
  <div class="col-xs-3">
  <%= render "users/userinfo" %>
</div>


    <div class="col-xs-9">
    <h2>Users</h2>

  <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td class="img"><%= attachment_image_tag book.user, :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", class: "img" %>
                </td>
          <td class="user-name"><%= book.user.name %></td>
          <td><%= link_to"Show", user_path(book.user.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
    </div>
    </div>
  </div>
</div>