<div class="page-header"></div>

<div class="body" >
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <div class="col-xs-3">
  <h2>User info</h2>
        <%= attachment_image_tag @bookdetail.user, :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" ,:size => "40x40" %>

      <table class="table" style="table-layout:fixed;width:100%;">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @bookdetail.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th style="word-wrap:break-word;"><%=@bookdetail.user.introduction %></th>
          </tr>
        </tbody>
    </table>
    <div class="row"><%= link_to"", edit_user_path(@bookdetail.user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench"  %></div>

    <%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% end %>

  <h2>New Book</h2>
    <%= form_for(@book) do |f| %>
    <div class="field row">
      <label>Title</label><br>
      <%= f.text_field :title, class:"col-xs-12" %>
    </div>

    <div class="field row">
      <label>Body</label><br>
      <%= f.text_area :body, class:"col-xs-12" %>
    </div>
    <br>
    <div class="actions row"><%= f.submit 'Create Book', class:" btn btn-primary col-xs-12" %></div>

<% end %>
</div>

    <div class="col-xs-9">
<h2>Book detail</h2>
<table class="table" style="table-layout:fixed;width:100%;">
    <thead></thead>
    <tbody>
      <tr>
        <td class="image"><%= attachment_image_tag @bookdetail.user, :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" ,:size => "40x40" %>
         <br>
         <%= link_to @bookdetail.user.name, user_path(@bookdetail.user) %>
        </td>
        <td class="title"><%= link_to @bookdetail.title, book_path(@bookdetail) %></td>
        <td class="body" style="word-wrap:break-word;" ><%= @bookdetail.body %></td>
        <td>
        <%if @bookdetail.user == current_user %>
        <%= link_to"Edit", edit_book_path(@bookdetail), class:"btn-sm btn-success" %>
        </td>
        <td>
        <%= link_to"Destroy", book_path(@bookdetail.id), method: :delete, "data-confirm" =>"Are you sure?", class:"btn-sm btn-danger" %>
        <% end %>
        </td>
      </tr>

    </tbody>
</table>
</div>
</div>
</div>
</div>