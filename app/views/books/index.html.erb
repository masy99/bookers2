

<div class="body" >
  <div class="container">
    <p id="notice"></p>
    <div class="row">
  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="col-xs-3">
  <%= render "users/userinfo" %>
</div>

    <div class="col-xs-9">
<h2>Books</h2>
  <table class="table table-hover table-inverse">
  	<thead>
  	  <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
       </tr>
    </thead>
    <tbody>
        <% @Books.each do |book| %>
        <tr>
          <td class="image"><%= attachment_image_tag book.user, :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" , class: "img" %></td>
      		<td class="title"><%= link_to book.title, book_path(book.id) %></td>
      		<td class="Body"><%= book.body %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
  </div>
  </div>
  </div>
</div>